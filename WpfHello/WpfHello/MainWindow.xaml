<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500" MinHeight="350" MinWidth="300" Closing="Window_Closing" Top="25" Left="25">
    <Grid>
        
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File" Click="MenuItem_Click_1">
                <MenuItem Header="Exit" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center"
       VerticalAlignment="Top">Пуск</Label>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="setBut_Click"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="retBut_Click"/>
        <Button x:Name="New_Win" Content="New Win" HorizontalAlignment="Left" Margin="20,150,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="New_Win_Click"/>
        <TextBox x:Name="setText" HorizontalAlignment="Left" Margin="140,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="30" TextChanged="setText_TextChanged">
        
                <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.566"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="retLabel" HorizontalAlignment="Left" Margin="140,100,0,0" VerticalAlignment="Top" Width="300" Height="30"/>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Margin="140,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="75"/>    </Grid>
</Window>
